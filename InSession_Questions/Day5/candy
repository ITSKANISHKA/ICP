class Solution {
    public int candy(int[] arr) {
        int n=arr.length;
        int[] arr1=new int[n];
        int [] arr2=new int[n];
        int count=0;
        arr1[0]=1;
        arr2[n-1]=1;
        for(int i=0;i<n-1;i++){
            if(arr[i]<arr[i+1]){
                arr1[i+1]=arr1[i]+1;
               
            }else{
                 arr1[i+1]=1;
            }
        }
        for(int i=n-1;i>0;i--){
            if(arr[i]<arr[i-1]){
               arr2[i-1]=arr2[i]+1;
            }else{
                 arr2[i-1]=1;
            }
        }
        for(int i=0;i<n;i++){
            count+=Math.max(arr1[i],arr2[i]);
        }return count;
        
    }
}
